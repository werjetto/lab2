#include <stdio.h>
#include <math.h>
int main()
{
    int X, result, factorial;
    unsigned int N;
    result=0;
    factorial=1;
    printf("X=");
    scanf_s("%d", &X);
    printf("N=\n");
    scanf("%d", &N);
    for (int i=2*N+1; i>=1; i--)
     {
         factorial=factorial*i;
     }
    printf("factorial =%d\n", factorial);
    result=X-pow(X,3)/(1*2*3)+pow(X,5)/(1*2*3*4*5)-pow(-1,N)*pow(X,2*N+1)/factorial;
    printf("result = %d\n", result);
    return 0;
}
