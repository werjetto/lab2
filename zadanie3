#include <stdio.h>
int main()
{
    float X;
    int result, factorial, mypow;
    unsigned int N;
    result=0;
    mypow=1;
    factorial=1;
    printf("X=");
    scanf_s("%e", &X);
    printf("N=\n");
    scanf_s("%d", &N);
    for (int i=1; i<=2*N+1; i+=2)
     {
        mypow = mypow * -X;
        factorial = 1 * i;
        result = result + mypow/ factorial;
     }
    printf("result = %d\n", result);
    return 0;
}
